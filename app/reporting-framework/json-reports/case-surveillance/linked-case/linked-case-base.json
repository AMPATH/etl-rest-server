{
  "name": "linkedCaseBase",
  "version": "1.0",
  "tag": "",
  "description": "Case-base definition for HTS Positive linked Cases (no ART start encounter prior to test).",
  "uses": [],
  "sources": [
    {
      "table": "amrs.encounter",
      "alias": "e"
    },
    {
      "table": "amrs.person",
      "alias": "p",
      "join": {
        "type": "INNER",
        "joinCondition": "p.person_id = e.patient_id"
      }
    },
    {
      "table": "amrs.patient_identifier",
      "alias": "pi2",
      "join": {
        "type": "INNER",
        "joinCondition": "pi2.patient_id = e.patient_id AND pi2.identifier_type = 8"
      }
    },
    {
      "table": "ndwr.mfl_codes",
      "alias": "mfl",
      "join": {
        "type": "LEFT",
        "joinCondition": "mfl.location_id = e.location_id"
      }
    },
    {
      "table": "amrs.person_address",
      "alias": "pa2",
      "join": {
        "type": "LEFT",
        "joinCondition": "pa2.person_id = e.patient_id AND pa2.preferred = 1"
      }
    },
    {
      "table": "amrs.location",
      "alias": "l",
      "join": {
        "type": "LEFT",
        "joinCondition": "l.location_id = e.location_id"
      }
    },
    {
      "table": "amrs.obs",
      "alias": "o",
      "join": {
        "type": "INNER",
        "joinCondition": "o.encounter_id = e.encounter_id AND o.concept_id = 1357 AND o.value_coded = 703 AND o.voided = 0"
      }
    }
  ],
  "columns": [
    {
      "type": "simple_column",
      "alias": "County",
      "column": "pa2.address1"
    },
    {
      "type": "simple_column",
      "alias": "SubCounty",
      "column": "pa2.address2"
    },
    {
      "type": "simple_column",
      "alias": "Ward",
      "column": "pa2.city_village"
    },
    {
      "type": "simple_column",
      "alias": "PatientPk",
      "column": "p.person_id"
    },
    {
      "type": "derived_column",
      "alias": "Sex",
      "expressionType": "simple_expression",
      "expressionOptions": {
        "expression": "CASE WHEN p.gender = 'M' THEN 'male' ELSE 'female' END"
      }
    },
    {
      "type": "simple_column",
      "alias": "Dob",
      "column": "p.birthdate"
    },
    {
      "type": "simple_column",
      "alias": "mfl_code",
      "column": "mfl.mfl_code"
    },
    {
      "type": "simple_column",
      "alias": "location",
      "column": "l.name"
    },
    {
      "type": "simple_column",
      "alias": "location_uuid",
      "column": "l.uuid"
    },
    {
      "type": "simple_column",
      "alias": "facility",
      "column": "mfl.Facility"
    },
    {
      "type": "simple_column",
      "alias": "location_id",
      "column": "mfl.location_id"
    },
    {
      "type": "simple_column",
      "alias": "PositiveHivTestDate",
      "column": "e.encounter_datetime"
    },
    {
      "type": "simple_column",
      "alias": "artStartDate",
      "column": "e.encounter_datetime"
    },
    {
      "type": "simple_column",
      "alias": "CreatedAt",
      "column": "e.date_created"
    },
    {
      "type": "simple_column",
      "alias": "UpdatedAt",
      "column": "e.date_changed"
    },
    {
      "type": "derived_column",
      "alias": "total",
      "expressionType": "simple_expression",
      "expressionOptions": {
        "expression": "1"
      }
    }
  ],
  "filters": {
    "conditionJoinOperator": "and",
    "conditions": [
      {
        "filterType": "tableColumns",
        "conditionExpression": "e.location_id IN ?",
        "parameterName": "locations"
      },
      {
        "filterType": "tableColumns",
        "conditionExpression": "e.encounter_type IN (296, 297)"
      },
      {
        "filterType": "tableColumns",
        "conditionExpression": "e.voided = 0"
      },
      {
        "filterType": "tableColumns",
        "conditionExpression": "mfl.mfl_code IS NOT NULL"
      },
      {
        "filterType": "tableColumns",
        "conditionExpression": "mfl.mfl_code <> 15999"
      },
      {
        "filterType": "tableColumns",
        "conditionExpression": "e.encounter_datetime >= ?",
        "parameterName": "startDate"
      },
      {
        "filterType": "tableColumns",
        "conditionExpression": "e.encounter_datetime <= ?",
        "parameterName": "endDate"
      },
      {
        "filterType": "custom",
        "conditionExpression": "NOT EXISTS (SELECT 1 FROM amrs.encounter e2 WHERE e2.patient_id = e.patient_id AND e2.encounter_type = 290 AND e2.voided = 0)"
      }
    ]
  },
  "groupBy": {
    "groupParam": "groupByParam",
    "columns": ["p.person_id", "mfl.mfl_code"]
  }
}
