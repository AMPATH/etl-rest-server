{
  "name": "plhivNcdMonthlyAggregateReport",
  "version": "1.0",
  "tag": "",
  "description": "",
  "uses": [
    {
      "name": "plhivNcdMonthlyReportDataset",
      "version": "1.0",
      "type": "dataset_def"
    }
  ],
  "sources": [
    {
      "dataSet": "plhivNcdMonthlyReportDataset",
      "alias": "pnmrd"
    }
  ],
  "columns": [
    {
      "type": "simple_column",
      "alias": "person_id",
      "column": "pnmrd.person_id"
    },
    {
      "type": "simple_column",
      "alias": "location_id",
      "column": "pnmrd.location_id"
    },
    {
      "type": "simple_column",
      "alias": "location_uuid",
      "column": "pnmrd.location_uuid"
    },
    {
      "type": "simple_column",
      "alias": "location",
      "column": "pnmrd.location"
    },
    {
      "type": "derived_column",
      "alias": "hypertensive_comorbidity",
      "expressionType": "simple_expression",
      "expressionOptions": {
        "expression": "SUM(pnmrd.hypertensive_comorbidity)"
      }
    },
    {
      "type": "derived_column",
      "alias": "diabetic_comorbidity",
      "expressionType": "simple_expression",
      "expressionOptions": {
        "expression": "SUM(pnmrd.diabetic_comorbidity)"
      }
    },
    {
      "type": "derived_column",
      "alias": "hypertensive_and_diabetic_comorbidity",
      "expressionType": "simple_expression",
      "expressionOptions": {
        "expression": "SUM(IF((pnmrd.hypertensive_comorbidity = 1 AND pnmrd.diabetic_comorbidity = 1), 1, NULL))"
      }
    },
    {
      "type": "derived_column",
      "alias": "mental_disorder_comorbidity",
      "expressionType": "simple_expression",
      "expressionOptions": {
        "expression": "SUM(pnmrd.mental_disorder_comorbidity)"
      }
    },
    {
      "type": "derived_column",
      "alias": "other_ncd_comorbidity",
      "expressionType": "simple_expression",
      "expressionOptions": {
        "expression": "SUM(pnmrd.other_ncd_comorbidity)"
      }
    }
  ],
  "groupBy": {
    "groupParam": "groupByParam",
    "columns": ["location_uuid"],
    "excludeParam": "excludeParam"
  },
  "transFormDirectives": {
    "joinColumn": "location_uuid",
    "skipColumns": [],
    "disaggregationColumns": []
  },
  "dynamicJsonQueryGenerationDirectives": {
    "patientListGenerator": {
      "useTemplate": "plhiv-ncd-report-patient-list-template",
      "useTemplateVersion": "1.0",
      "generatingDirectives": {
        "joinDirectives": {
          "joinType": "INNER",
          "joinCondition": "<<base_column>> = <<template_column>>",
          "baseColumn": "person_id",
          "templateColumn": "person_id"
        }
      },
      "skipParams": []
    }
  }
}
