{
  "name": "exampleReportBase",
  "version": "1.0",
  "tag": "",
  "description": "",
  "uses": [],
  "sources": [
    {
      "table": "etl.monthly_covid_extract_report",
      "alias": "ce"
    },
    {
      "table": "amrs.location",
      "alias": "l",
      "join": {
        "type": "INNER",
        "joinCondition": "ce.location_id = l.location_id"
      }
    }
  ],
  "columns": [
    {
      "type": "simple_column",
      "alias": "person_id",
      "column": "ce.person_id"
    },
    {
      "type": "simple_column",
      "alias": "location_id",
      "column": "ce.location_id"
    },
    {
      "type": "simple_column",
      "alias": "location",
      "column": "l.name"
    },
    {
      "type": "simple_column",
      "alias": "location_uuid",
      "column": "l.uuid"
    },
    {
      "type": "simple_column",
      "alias": "covid_screening_date",
      "column": "DATE_FORMAT(ce.encounter_date,'%Y-%m-%d')"
    },
    {
      "type": "derived_column",
      "alias": "screened_this_month",
      "expressionType": "simple_expression",
      "expressionOptions": {
        "expression": "if(ce.screened_this_month = 1,1,null)"
      }
    },
    {
      "type": "derived_column",
      "alias": "month",
      "expressionType": "simple_expression",
      "expressionOptions": {
        "expression": "DATE_FORMAT(ce.endDate,'%Y-%m')"
      }
    }
  ],
  "filters": {
    "conditionJoinOperator": "and",
    "conditions": [
      {
        "filterType": "tableColumns",
        "conditionExpression": "ce.location_id IN (?)",
        "parameterName": "locations"
      },
      {
        "filterType": "tableColumns",
        "conditionExpression": "ce.endDate = ?",
        "parameterName": "endingMonth"
      }
    ]
  },
  "groupBy": {
    "groupParam": "groupByParam",
    "columns": ["person_id"]
  }
}
