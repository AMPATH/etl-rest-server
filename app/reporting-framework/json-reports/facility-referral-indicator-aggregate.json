			           }
        },
        {
            "type": "derived_column",
             "alias":"is_referal_complete",
             "expressionType": "simple_expression",
             "expressionOptions": {
                "expression":"count(distinct if(frid.is_referal_complete,frid.patients,null))"
                 }
